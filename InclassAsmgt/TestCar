#include <HCSR04.h>
HCSR04 hc(8,9); 
int SensorL=4; //right LED
int SensorR=2; //left LED
int LEDRight=12; //Yellow LED
void setup() {
   Serial.begin(9600);
   pinMode(LED_BUILTIN, OUTPUT); //left light
   pinMode(LEDRight, OUTPUT); //right light
   pinMode(SensorL,INPUT);  
   pinMode(SensorR,INPUT); 

}

void loop() {
 

 if(digitalRead(2)==LOW) //detectLeft
 {
  digitalWrite(LED_BUILTIN, LOW);
  digitalWrite(LEDRight, HIGH);
   delay(100);
 }
  else if(digitalRead(4)==LOW)//detectRight
  {
    digitalWrite(LED_BUILTIN, HIGH);
    digitalWrite(LEDRight, LOW);
     delay(100);
  }
    else if(hc.dist()<20)//detectFront20cm
    { digitalWrite(LED_BUILTIN,LOW);
    digitalWrite(LEDRight,LOW);
    delay(100);
    }
    else if(hc.dist()>40)//ObjFar40cm
    { digitalWrite(LED_BUILTIN,HIGH);
    digitalWrite(LEDRight,HIGH);
    delay(100);
    }
    else if(hc.dist()>=20 && hc.dist()<=40)//detectFront20to40cm
    { 
      delay(1000);
      digitalWrite(LED_BUILTIN,HIGH);
       digitalWrite(LEDRight,HIGH);
       delay(1000);
    }
   else
   {digitalWrite(LED_BUILTIN,LOW);
       digitalWrite(LEDRight,LOW);
   }
  }
